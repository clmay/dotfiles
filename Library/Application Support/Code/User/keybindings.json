// Place your key bindings in this file to override the defaults
[
  {
    // Switch tab (right)
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor"
  },
  {
    // Switch tab (left)
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor"
  },
  {
    // Ctrl+` toggle terminal and editor focus
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    // Open terminal in current file's directory
    "key": "ctrl+.",
    "command": "terminalHere.create"
  },
  {
    // Prevent cmd+w from closing empty window
    "key": "cmd+w",
    "command": "-workbench.action.closeWindow",
    "when": "!editorIsOpen && !multipleEditorGroups"
  },
  {
    // Cmd+0 resets zoom
    "key": "cmd+0",
    "command": "workbench.action.zoomReset"
  },
  {
    // Toggle focus sidebar & editor
    "key": "cmd+e",
    "command": "workbench.action.focusSideBar"
  },
  {
    // Toggle focus editor & sidebar
    "key": "cmd+e",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus"
  },
  {
    // Find and replace within file
    "key": "cmd+h",
    "command": "editor.action.startFindReplaceAction"
  },
  {
    "key": "alt+cmd+f",
    "command": "-editor.action.startFindReplaceAction"
  },
  {
    "key": "cmd+alt+n",
    "command": "explorer.newFile"
  },
  {
    "key": "ctrl+cmd+c",
    "command": "copyFilePath"
  },
  {
    "key": "ctrl+cmd+r",
    "command": "copyRelativeFilePath"
  },
]
